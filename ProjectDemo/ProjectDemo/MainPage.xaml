<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ProjectDemo.MainPage">
	<StackLayout>
		<Grid Margin="20,35,20,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.5*" />
				<ColumnDefinition Width="0.5*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>
			<Button Text="Back" Clicked="Previous_Quote" HorizontalOptions="Start"/>
			<Button Grid.Column="1"
           Text="Next" Clicked="Next_Quote"  HorizontalOptions="End"/>
		</Grid>
		<Label x:Name="fontSize"
			   Text="{Binding Source={x:Reference slider}, Path=Value}"/>
		<Slider x:Name="slider"
				ValueChanged="Slider_ValueChanged"
				Maximum="72.0"
				Minimum="11.0"/>
		<Label x:Name="quote"
			   FontSize="{Binding Source={x:Reference slider}, Path=Value}"/>
		<StackLayout VerticalOptions="EndAndExpand">
			<Label Text="Exercise 01@Mermellah Angni"
					   HorizontalOptions="Start"/>
		</StackLayout>
	</StackLayout>

</ContentPage>
