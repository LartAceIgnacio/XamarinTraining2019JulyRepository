                <Image x:Name="Image08" Aspect="AspectFill" Grid.Row="4" Grid.Column="1">
                    <Image.Source>
                        <UriImageSource 
                            Uri="https://wc-ahba9see.c.sakurastorage.jp/87/fmzuhcryutqclbisasxvqwjfmmekbipqwacavskj-740.jpg"
                            CachingEnabled="False"/>
                    </Image.Source>
                </Image>
