                            CachingEnabled="False"/>
                    </Image.Source>
                </Image>
                <ActivityIndicator Grid.Row="3" Grid.Column="2"
                    VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                    BindingContext="{x:Reference Image06}" IsRunning="{Binding IsLoading}" />
                <!-- Image 07 -->
                <Image x:Name="Image07" Aspect="AspectFill" Grid.Row="4" Grid.Column="0">
