                        <UriImageSource 
                            Uri="https://wc-ahba9see.c.sakurastorage.jp/87/ijqcbwbuyilabdtxeyoeunjgyjuxegljmytrjmdc-740.jpg"
                            CachingEnabled="False"/>
                    </Image.Source>
                </Image>
                <ActivityIndicator Grid.Row="2" Grid.Column="2"
                    VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                    BindingContext="{x:Reference Image05}" IsRunning="{Binding IsLoading}" />
                <!-- Image 06 -->
                <Image x:Name="Image06" Aspect="AspectFill" Grid.Row="3" Grid.Column="2">
